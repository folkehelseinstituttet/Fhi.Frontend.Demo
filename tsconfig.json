/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@folkehelseinstituttet/angular-components": [
        "dist/fhi-angular-components"
      ],
      "@folkehelseinstituttet/angular-highcharts": [
        "dist/fhi-angular-highcharts"
      ],
      "@folkehelseinstituttet/angular-treeview-builder": [
        "dist/fhi-angular-treeview-builder"
      ]
    },
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "strictTemplates": true
  }
}
